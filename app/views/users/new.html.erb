<% provide(:title, 'Sign up') %>
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "David's Rental", '#', id: 'logo' %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Home', home_path %></li>
        <li><%= link_to 'Help', help_path %></li>
        <li><%= link_to 'Log in' %></li>
      </ul>
    </nav>
  </div>
</header>
<body>
<h1 class="text-center" style="font-weight: bold">Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages_html' %>

        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <h6 style="color: #666666; font-style: italic">Password must be more than a combination of
          6 characters or numbers or mixed but less than 20.</h6>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.hidden_field :user_type, :value => "customer" %>

        <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</body>