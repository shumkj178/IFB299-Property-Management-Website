<body>
<% provide(:title, "Edit user") %>
<div class="container">
  <h1 class="text-center" style="font-weight: bold">Update Your Profile</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages_html' %>

          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>

          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>

          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
          <h6 style="color: #666666; font-style: italic">Password must be more than a combination of
            6 characters or numbers or mixed but less than 20.</h6>

          <div>
            <%= f.submit "Save Changes", class: "btn btn-primary btn-block" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
</body>
