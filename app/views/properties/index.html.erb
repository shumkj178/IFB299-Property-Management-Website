<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <%= link_to root_path, id: 'logo' do %>
        <i class="fa fa-home"></i> David's Rental
    <% end %>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Home', home_path %></li>
        <li><%= link_to 'Help', help_path %></li>
        <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", '#' %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
<body>
<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <div class="container">
    <div class="row">
      <% @properties.each do |property| %>
          <div class="col-md-4 text-center">
            <%= link_to property do %>
                <%= image_tag(property.picture_path, size: '300x180', alt: 'View') %>
            <% end %>
            <h4>
              <%= property.house_no + ", " + property.street + ", " + property.suburbs + ", " + property.postcode + " " + property.region %>
            </h4>
            <h4><i class="glyphicon glyphicon-usd"></i> <%= property.price.to_s + " per week" %></h4>
            <%= link_to property, class: 'btn btn-sm btn-default btn-block' do %>
                <h4><i class="glyphicon glyphicon-zoom-in"></i> More Details</h4>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
  </tbody>
</table>
</body>
