      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="center item active">
          <h1>Welcome to the David's Rental</h1>

          <h2>
            Check out the best rates properties we have now!
          </h2>

          <%= link_to "Sign up now!", new_users_path, class: 'btn btn-lg btn-primary' %>
        </div>
        <div class="item">
          <h1 class="text-center">Hey!</h1>
          <h3 class="text-center"><%= image_tag '/properties/1.jpg' %></h3>
        </div>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div>
<% end %>
</body>

